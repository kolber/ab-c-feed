!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "description", :content => @article.excerpt}
    %meta{:name => "keywords", :content => @article.keywords}
    %meta{:name => "author", :content => "ab+c"}
    %meta{:name => "robots", :content => "index, follow"}

    /[if IE]
      %script{:src => " http://html5shiv.googlecode.com/svn/trunk/html5.js"}

    %title= "#{@article.title}, ab+c"
    %link{:rel => "stylesheet", :href => "/css/base.css"}
    %link{:rel => "alternate", :title => "ab+c atom", :href => "http://www.ab-c.com.au/articles.atom", :type => "application/atom+xml"}
    
  %body{:id => @page_id}
    #wrapper
      %a{:href => '/', :id => "home"} &larr; Home
      %article
        = yield
    %script{:src => "/js/jquery-1.4.2.min.js"}
    %script{:src => "/js/track-external.js"}

